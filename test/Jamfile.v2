import testing ;

project hof
    : requirements
      <include>../include/ 
    ;

rule test_all
{
   local all_rules = ;

   for local fileb in [ glob *.cpp ]
   {
      all_rules += [ run $(fileb)
      :  # additional args
      :  # test-files
      :  # requirements
      ] ;
   }

   return $(all_rules) ;
}

test-suite hof : [ test_all r ] : ;
